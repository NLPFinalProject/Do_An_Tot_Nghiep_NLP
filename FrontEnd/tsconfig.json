{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "downlevelIteration": true,
    "declaration": false,
    "moduleResolution": "node",
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "module": "esnext",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es2015",
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "typeRoots": ["node_modules/@types"],
    "lib": ["es2015", "es2018", "dom"],
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@account/*": ["app/modules/account/*"],
      "@daovan/*": ["./src/app/modules/dao-van/*"],
      "@env/*": ["environments/*"]
    }
  }
}
